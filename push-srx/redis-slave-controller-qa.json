{
   "kind":"ReplicationController",
   "apiVersion":"v1",
   "metadata":{
      "name":"redis-slave-qa",
      "labels":{
         "role":"slave-qa"
      }
   },
   "spec":{
      "replicas":2,
      "selector":{
         "app":"redis-qa",
         "role":"slave-qa"
      },
      "template":{
         "metadata":{
            "labels":{
               "app":"redis-qa",
               "role":"slave-qa",
	       "name":"redis-qa"
            }
         },
         "spec":{
            "containers":[
               {
                  "name":"redis-slave-qa",
                  "image":"kubernetes/redis-slave:v2",
                  "ports":[
                     {
                        "name":"redis-server-qa",
                        "containerPort":6379
                     }
                  ]
               }
            ]
         }
      }
   }
}
